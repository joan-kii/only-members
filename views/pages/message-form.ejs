<%- include('../partials/header'); %>
<main class="relative flex-1">
  <div class="container mx-auto mt-20 mb-5 p-6 w-full md:w-3/4 lg:w-2/4 text-gray-700 bg-gray-100 shadow-2xl rounded ring ring-inset ring-yellow-200"">
    <form method="POST" action="">
      <div class="mb-3 flex flex-col items-center">
        <h2 class="mb-3 font-bold text-xl text-yellow-400">
          Write a Message
        </h2>
        <div class="mb-12 w-3/4">
          <label for="title" class="mb-3 block">Title</label>
          <input type="text" id="title" name="title" required class="mt-0 block w-full px-0.5 bg-gray-100 border-0 border-b-2 border-yellow-400 focus:outline-none focus:border-yellow-200">
        </div>
        <div class="mb-12 w-3/4">
          <label for="message" class="mb-3 block">Message</label>
          <textarea type="textarea" id="message" name="message" required rows="5" class="mt-0 block w-full px-0.5 bg-gray-100 rounded border-2 border-yellow-400 focus:outline-none focus:border-yellow-200"></textarea>
        </div>
        <div class="relative mb-12 w-3/4">
          <button type="submit" class="absolute ml-4 py-2 px-4 right-0 font-bold text-gray-500 bg-yellow-300 hover:bg-opacity-60 hover:text-gray-600 hover:border-gray-600 rounded ring-2 ring-inset ring-gray-500">Send Message</button>
        </div>
      </div>
    </form>
  </div>
</main>
<%- include('../partials/footer'); %>
